{
  "name": "testing-devops-v2",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "node-fetch": "^2.1.2",
    "now-env": "^3.0.4",
    "react": "^16.4.1",
    "react-app-rewired": "^1.5.2",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4",
    "request": "^2.87.0"
  },
  "scripts": {
    "start": "yarn dev",
    "build": "yarn build:client && yarn build:server",
    "build:client": "react-app-rewired build",
    "build:server": "babel src/server -d build/server",
    "deploy:random": "now",
    "deploy:production": "now && now alias",
    "deploy:staging": "now -A now-staging.json && now alias -A now-staging.json",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:client": "react-scripts start",
    "dev:server": "DEV=true babel-watch ./src/server/index.js",
    "now-start": "node build/server/index.js",
    "test": "react-scripts test --env=jsdom",
    "travis:production": "now --token $NOW_TOKEN && now alias --token $NOW_TOKEN && now rm -s -y --token $NOW_TOKEN",
    "travis:staging": "now -A now-staging.json --token $NOW_TOKEN && now alias -A now-staging.json --token $NOW_TOKEN && now rm -A now-staging.json -s -y --token $NOW_TOKEN",
    "eject": "react-scripts eject"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:8081",
      "pathRewrite": {
        "^/proxy": ""
      },
      "changeOrigin": true
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-watch": "^2.0.7",
    "concurrently": "^3.6.0"
  }
}
